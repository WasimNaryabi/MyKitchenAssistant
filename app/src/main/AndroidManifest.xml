<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myrecipeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.RecipeHome" />
        <activity android:name=".Activities.DessertsHome" />
        <activity android:name=".Activities.VegeHome" />
        <activity android:name=".Activities.NonVegeHome" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.UserLogin" />
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.UserSignup" />
        <activity android:name=".Activities.MyFavorite" />
        <activity android:name=".Activities.AboutApp"></activity>
    </application>

</manifest>