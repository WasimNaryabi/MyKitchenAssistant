<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/boxx_bg"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/dRecipePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/biryani_item"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/dRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Karachi Baryani"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"

                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/boxx_bg"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:text="Time:"
                        android:gravity="center"
                        android:textColor="#f00"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/dRecipeTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:text="30 Minuts"
                        android:gravity="center|left"
                        android:textColor="#00f"
                        android:textSize="18sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:text="Cost:"
                        android:gravity="center"
                        android:textColor="#f00"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/dRecipeCost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:text="Rs 450"
                        android:gravity="center|left"
                        android:textColor="#00f"
                        android:textSize="18sp"/>

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>